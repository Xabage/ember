<div class="row">
  <div class="col-md-1">
    {{#link-to (query-params limit='all' letter='') class='btn btn-default btn-lg btn-block'}}Todo{{/link-to}}
  </div>
  <div class="col-md-1">
    {{#link-to (query-params limit='abc') class='btn btn-default btn-lg btn-block'}}Abc{{/link-to}}
  </div>

  <div class="col-md-10">
    {{#if limitAll}}
      <div class="form-group">
        {{input value=filter class="form-control input-lg" placeholder="Buscar por disco"}}
      </div>
    {{else}}
        <div class="form-group">
          {{abc-buttons}}
        </div>
    {{/if}}
  </div>
</div>


<div class="row">
  {{#each filteredList as |disco|}}
    <div class="col-md-4">
      {{#disco-item item=disco badge=disco.grupos.length}}
        {{#link-to 'discos.edit' disco.id class='btn btn-success btn-xs'}}Editar{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteDisco' disco}}>Borrar</button>
      {{/disco-item}}
    </div>
  {{else}}
    {{#if model.isUpdating}}
      {{spinner-cube}}
    {{else}}
      <div class="col-md-12 text-center">
        <div class="alert alert-info">
          Lo sentimos, no hay resultados.
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>
