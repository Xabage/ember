<div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Título</label>
                <div class="col-sm-8">
                    {{input type="text" value=item.titulo class="form-control" placeholder="Título del disco, vinilo, dvd, ..."}}
                </div>
            </div>

            
            <div class="form-group">
                {{#power-select placeholder=" -- Seleccione un Grupo -- " allowClear=true searchField="nombre" selected=selectedGrupo options=item.grupos onchange=(action "grupoSelectionChanged") as |grupo|}}
                {{grupo.nombre}}
                {{/power-select}}
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Portada*</label>
                <div class="col-sm-8">
                    {{input type="text" value=item.portada class="form-control" placeholder="Url de la portada (.jpeg, jpg o png)"}}
                    {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
                </div>

            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Año</label>
                <div class="col-sm-8">
                    {{input type="text" value=item.publicacion class="form-control" placeholder="Fecha de edición"}}
                </div>
            </div>

            <div class="form-group">
                {{#power-select placeholder=" -- Seleccione un Formato -- " allowClear=true searchField="tipo" selected=selectedFormato options=item.formatos onchange=(action "formatoSelectionChanged") as |formato|
                }}
                {{formato.tipo}}
                {{/power-select}}
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">

                    <button type="submit" class="btn btn-primary" {{action 'saveDisco' item}}
                        disabled={{unless item.isValid true}}>{{buttonLabel}}</button>
                </div>
            </div>
        </div>
        