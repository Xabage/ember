<div class="row">

  <div class="col-md-10">
    <div class="form-horizontal">
        <div class="form-group has-feedback {{if model.isValid 'has-success'}}">
            <label class="col-sm-2 control-label">Nombre*</label>
            <div class="col-sm-10">
            {{input type="text" value=model.nombre class="form-control" placeholder="El nombre del Grupo"}}
            {{#if model.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
