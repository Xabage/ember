        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
             <button type="submit" class="btn btn-default" {{action 'saveGrupo' model}} disabled={{unless model.isValid true}}>Nuevo Grupo</button>
            </div>
        </div>
    </div>

  </div> 

</div>