<h2>Lista</h2>

<div class="row">
  {{#each model as |grupo|}}
  <div class="col-md-4">
    <div class="panel panel-default grupo-item">
        <div class="panel-heading">
        <h3 class="panel-title"><b>{{grupo.nombre}}</b></h3>
        </div>
        <div class="panel-body">
        <ul>
        {{#each (sort-by "publicacion:asc" grupo.discos) as |disco|}}
            <li>{{disco.titulo}}</li>            
         {{/each}}   
        </ul>
        </div>
        <div class="panel-footer text-right">
            {{#link-to 'grupos.edit' grupo.id class='btn btn-success btn-xs'}}Editar{{/link-to}}
            <button class="btn btn-danger btn-xs" {{action 'deleteGrupo' grupo}}>Borrar</button>
        </div>
    </div>
  </div>
{{/each}}
</div>