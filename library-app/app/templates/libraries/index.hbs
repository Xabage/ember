<h2>Listado de Bibliotecas <span class="icon-library"></span></h2>

<div class="row">
  {{#each model as |library|}}
    <div class="col-md-4">
      {{#library-item item=library}}
        {{#link-to 'libraries.edit' library.id class='btn btn-success btn-xs'}}Editar{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>Borrar</button>
      {{/library-item}}
    </div>
  {{/each}}
</div>