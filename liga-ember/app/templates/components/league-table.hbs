<table class="w-full">
    <thead class="bg-grey-lighter border-b-2 border-grey p-4 m-4 align-bottom text-center">
        <th></th>
        <th>Equipo</th>
        <th>Part</th>
        <th>Gan</th>
        <th>Emp</th>
        <th>Per</th>
        <th>GF</th>
        <th>GC</th>
        <th>DG</th>
        <th>Puntos</th>
        <th>Racha</th>
    </thead>
    {{#each (sort-by "points:desc" "goalsDifference:desc" @teams) as |team index|}}
    <tr class={{if (or (eq index 4)(eq index 6)(eq index 17)) "border-t-2 border-grey border-dashed"}}>
        <td class="p-4">{{add 1 index}}</td>
        <td class="font-bold">{{team.name}}</td>
        <td class="text-center">{{team.games.length}}</td>
        <td class="text-center">{{team.gamesWon.length}}</td>
        <td class="text-center">{{team.gamesDrawn.length}}</td>
        <td class="text-center">{{team.gamesLost.length}}</td>
        <td class="text-center">{{team.goalsScored}}</td>
        <td class="text-center">{{team.goalsConceded}}</td>
        <td class="text-center">{{team.goalsDifference}}</td>
        <td class="font-bold text-center">{{team.points}}</td>
        <td>
            <div class="flex text-white text-sm text-center">
            {{#each (take 5 (sort-by "playedOn:assc" team.games)) as |game|}}
                {{#if game.isDraw}}
                    <span class="p-1 mr-1 bg-grey w-8">E</span>
                {{else if (eq game.winningTeam.id team.id)}}
                    <span class="p-1 mr-1 bg-green w-8">G</span>
                {{else}}
                    <span class="p-1 mr-1 bg-red w-8">P</span>
                {{/if}}
            {{/each}}
            </div>
        </td>        
    </tr>
    {{/each}}

</table>